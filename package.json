{
  "name": "valstro-search",
  "version": "1.0.0",
  "description": "",
  "bin": {
    "valstro-search": "./bin/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "start": "yarn run build && node ./dist/index.js --help",
    "build": "yarn run clean && yarn install && tsc",
    "global": "yarn add global . && valstro-search",
    "clean": "rm -rf ./dist",
    "clean:all": "rm -rf ./node_modules ./dist",
    "lint": "eslint --ext .ts .",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --list-different --loglevel=debug '**/*.ts'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sam-code-1/valstro-cli-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sam-code-1/valstro-cli-app/issues"
  },
  "homepage": "https://github.com/sam-codes-1/valstro-cli-app#readme",
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/node": "^17.0.41",
    "@types/node-emoji": "^1.8.1",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.3.0",
    "dotenv": "^16.0.1",
    "events": "^3.3.0",
    "kleur": "^4.1.4",
    "node-emoji": "^1.11.0",
    "readline-sync": "^1.4.10",
    "socket.io-client": "^4.5.1",
    "typed-event-emitter": "^3.0.0"
  }
