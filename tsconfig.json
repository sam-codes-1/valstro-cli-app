{
  "compilerOptions": {
      "lib": ["dom", "ES2020"],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/*"
          ]
      },
      "strict": true,
      "plugins": [{"name": "tslint-language-service"}]
  },
  "include": [
      "src/**/*", "src/*"
  ]
}
